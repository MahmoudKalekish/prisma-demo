generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Author {
  id    String @id @default(uuid())
  email String @unique
  name  String
  books Book[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Publisher {
  id        String @id @default(uuid())
  name      String
  books     Book[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id       String @id @default(uuid())
  title    String
  authorId String
  author   Author @relation(fields: [authorId], references: [id])

  // Publisher relation (many books -> one publisher)
  publisherId String
  publisher Publisher @relation(fields: [publisherId], references: [id])
  
  // many-to-many with Genre
  genres      Genre[]

  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([publisherId])
}


model Genre {
  id        String   @id @default(uuid())
  name      String   @unique
  books     Book[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String

  reviews   Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id        String   @id @default(uuid())

  // rating 1..5 (we'll enforce via SQL CHECK constraint in migration)
  rating    Int
  comment   String?

  bookId    String
  userId    String

  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // One review per user per book (common rule)
  @@unique([bookId, userId])
  @@index([bookId])
  @@index([userId])
}